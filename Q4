package com.mycompany.tv;


public class Tv {
    int canal, volume, aumentar = 1, diminuir = -1;
    
      public int getCanal(){
    return canal;
    }
    public void setCanal(int canal){
    this.canal=canal;
    }
    
    public int getVolume(){
    return volume;
    }
    public void setVolume(int volume){
    this.volume =volume;
    }

    public static void main(String[] args) {
        
        Tv tv1 = new Tv();
      
         tv1.setVolume(60);
         tv1.setCanal(13);
        
       System.out.println("Volume da tv." + tv1.volume);
       System.out.println("Canal da tv." + tv1.canal);
       
       tv1.volume = tv1.volume + tv1.aumentar;
       
       System.out.println("Volume depois de aumentar tv." + tv1.volume);
       System.out.println("Canal da tv." + tv1.canal);
       
       tv1.volume = tv1.volume + tv1.diminuir;
       
       System.out.println("Volume depois de diminuir tv." + tv1.volume);
       System.out.println("Canal da tv." + tv1.canal);
        
    }
}
